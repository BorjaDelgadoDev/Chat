<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/text_view_date_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9 of December" />

    <ImageView
        android:id="@+id/image_view_user"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_view_chat_me"
        android:layout_marginHorizontal="12dp"
        tools:background="@color/primary_color" />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/card_view_chat_me"
        app:layout_constraintStart_toEndOf="@id/image_view_user"
        android:paddingHorizontal="6dp"
        tools:text="Borja" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_chat_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/primary_color"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_date_me">

        <TextView
            android:id="@+id/text_view_chat_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textColor="@color/message_me_color"
            tools:text="este es mi mensaje " />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/card_view_chat_me"
        app:layout_constraintStart_toEndOf="@+id/card_view_chat_me"
        tools:text="12:45" />


</androidx.constraintlayout.widget.ConstraintLayout>